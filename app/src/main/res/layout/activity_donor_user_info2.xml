<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/re"
    android:id="@+id/activity_donor_user_info2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="com.example.abhishek.fooddivert.Donor_user_info2">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="DONATION DETAILS"
        android:textSize="25dp"
        android:textColor="@color/white"
        android:background="@color/trans"
        />
    <EditText
        android:layout_height="40dp"
        android:textColor="@color/secondary_text"
        android:textColorHint="@color/secondary_text"
        android:paddingLeft="15dp"
        android:alpha="0.6"
        android:background="@drawable/rounded"
        android:layout_width="match_parent"


        android:layout_gravity="left"
        android:hint=" Food item names"

        android:textSize="15dp"

        android:layout_marginTop="15dp"
        android:id="@+id/editText_donor_info2_foodname"
        />

    <EditText
        android:inputType="number"
        android:layout_height="40dp"
        android:textColor="@color/secondary_text"
        android:textColorHint="@color/secondary_text"
        android:paddingLeft="15dp"
        android:alpha="0.6"
        android:background="@drawable/rounded"
        android:layout_width="match_parent"


        android:layout_marginTop="20dp"
        android:textSize="15dp"

        android:hint="Quantity in plates"
        android:id="@+id/editText_donor_info2_foodquantity"
        />
    <EditText
        android:layout_height="40dp"
        android:textColor="@color/secondary_text"
        android:textColorHint="@color/secondary_text"
        android:paddingLeft="15dp"
        android:alpha="0.6"
        android:background="@drawable/rounded"
        android:layout_width="match_parent"


        android:layout_marginTop="15dp"
        android:inputType="date"
        android:textSize="15dp"

        android:hint="Best before(DATE)"
        android:id="@+id/editText_donor_info2_foodnamedate"
        />
    <EditText
        android:layout_height="40dp"
        android:textColor="@color/secondary_text"
        android:textColorHint="@color/secondary_text"
        android:paddingLeft="15dp"
        android:alpha="0.6"

        android:background="@drawable/rounded"
        android:layout_width="match_parent"
        android:layout_marginTop="15dp"
        android:textSize="15dp"
        android:hint="Available time"
        android:id="@+id/editText_donor_info2_foodnametime"
        />

    <EditText
        android:layout_height="40dp"
        android:textColor="@color/secondary_text"
        android:textColorHint="@color/secondary_text"
        android:paddingLeft="15dp"
        android:alpha="0.6"
        android:background="@drawable/rounded"
        android:layout_width="match_parent"

        android:inputType="textPersonName"
        android:textSize="15dp"
        android:hint="Nearest Railwat Station"

        android:layout_marginTop="15dp"
        android:ems="10"
        android:id="@+id/editText6" />

    <RadioGroup
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <RadioButton

            android:textColor="@color/white"
            android:text="Veg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/radioButton"
            android:textSize="15dp"
            android:layout_marginTop="5dp"
            />

        <RadioButton
            android:textColor="@color/white"
            android:text="Non-Veg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/radioButton2"
            android:textSize="15dp"
            android:layout_marginTop="5dp"/>

    </RadioGroup>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded"
            android:textColor="@color/black"
            android:layout_marginTop="20dp"
            android:layout_gravity="center"
            android:onClick="takepic"
            android:text="ADD IMAGE"
            android:layout_marginRight="3dp"
            android:id="@+id/button7"
            android:layout_weight="1" />

        <Button

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded"
            android:textColor="@color/black"
            android:layout_marginTop="20dp"
            android:layout_gravity="center"
            android:layout_marginLeft="3dp"
            android:text="Done"
            android:id="@+id/button3"
            android:onClick="onDone"
            android:layout_weight="1" />
    </LinearLayout>


</LinearLayout>

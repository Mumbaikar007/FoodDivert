<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_donor_user_info"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.abhishek.fooddivert.Donor_user_info"
    android:background="@drawable/re">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:text="DONOR INFORMATION"
                android:textSize="32dp"

                android:background="@color/trans"
                android:textColor="@color/white"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="26dp"
                android:id="@+id/textView_donor_user"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true" />

            <EditText

                android:hint="Name"
                android:layout_height="40dp"
                android:textColor="@color/secondary_text"
                android:textColorHint="@color/secondary_text"
                android:paddingLeft="15dp"
                android:alpha="0.6"
                android:background="@drawable/rounded"
                android:layout_width="match_parent"
                android:layout_below="@+id/textView_donor_user"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="7dp"
                android:id="@+id/editText3_donor_user" />

            <EditText

                android:layout_height="40dp"
                android:textColor="@color/secondary_text"
                android:textColorHint="@color/secondary_text"
                android:paddingLeft="15dp"
                android:alpha="0.6"
                android:background="@drawable/rounded"
                android:layout_width="match_parent"


                android:hint="Contact Number"

                android:inputType="phone"
                android:ems="10"

                android:layout_marginTop="13dp"
                android:id="@+id/editText4"
                android:layout_below="@+id/editText3_donor_user"
                android:layout_alignParentStart="true" />

            <EditText

                android:layout_height="40dp"
                android:textColor="@color/secondary_text"
                android:textColorHint="@color/secondary_text"
                android:paddingLeft="15dp"
                android:alpha="0.6"
                android:background="@drawable/rounded"
                android:layout_width="match_parent"


                android:inputType="textPersonName"
                android:hint="Address"

                android:ems="10"
                android:layout_marginTop="10dp"
                android:id="@+id/editText5"
                android:layout_below="@+id/editText4"
                android:layout_alignParentStart="true" />

            <Button
                android:layout_marginTop="20dp"
                android:text="Get your location"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/rounded"
                android:textColor="@color/black"
                android:id="@+id/button2"
                android:onClick="getdonorlocation"
                android:layout_below="@+id/editText5"
                android:layout_centerHorizontal="true" />

            <TextView
                android:text="Latitude :"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:textColor="@color/white"
                android:textSize="20dp"
                android:background="@color/trans"

                android:id="@+id/textView4"
                android:layout_below="@+id/textView"
                android:layout_alignStart="@+id/textView"
                android:layout_marginTop="20dp" />

            <TextView
                android:text="Longitude :"
                android:layout_width="match_parent"
                android:textSize="20dp"
                android:textColor="@color/white"
                android:layout_height="30dp"
                android:background="@color/trans"
                android:layout_below="@+id/button2"
                android:layout_alignStart="@+id/textView_donor_user"
                android:layout_marginTop="20dp"
                android:id="@+id/textView" />

            <TextView
                android:text="next>"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textColor="@color/white"
                android:background="@color/trans"
                android:textSize="25dp"
                android:id="@+id/textView5"
                android:onClick="onSaveandproceed"
                android:layout_alignParentBottom="true"
                android:paddingTop="10dp"
                android:paddingLeft="250dp" />

        </LinearLayout>
    </LinearLayout>


</LinearLayout>
